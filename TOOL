#!/bin/bash

# Identidad del Creador: Javic888
# Nombre: DNS SEC

# Colores
cyan='\e[1;36m'
green='\e[1;32m'
red='\e[1;31m'
white='\e[1;37m'

# Función de Auto-Actualización
function update() {
    echo -e "${cyan}[*] Verificando actualizaciones de Javic888...${white}"
    git pull origin main &> /dev/null
}

clear
update

# Banner
echo -e "${cyan}  ____  _   _ ____    ____  _____ ____ "
echo " |  _ \| \ | / ___|  / ___|| ____/ ___|"
echo " | | | |  \| \___ \  \___ \|  _|| |    "
echo " | |_| | |\  |___) |  ___) | |__| |___ "
echo " |____/|_| \_|____/  |____/|_____\____|"
echo -e "${white}          echa por JVS (Javic888)${red}"
echo "---------------------------------------${white}"

# Login System
echo -ne "${green}USER: ${white}"
read user_input
echo -ne "${green}PASS: ${white}"
read -s pass_input
echo ""

if [[ "$user_input" == "JVS login" && "$pass_input" == "JVS2011SECJAVIC#SOCITY" ]]; then
    echo -e "\n${cyan}BIENVENIDO JAVIC888. ACCESO MAESTRO TOTAL.${white}"
else
    # Validación para ADMIN estándar
    if [[ "$user_input" == "ADMIN" && "$pass_input" == "DNS SEC" ]]; then
        echo -e "\n${green}Acceso Administrador Concedido.${white}"
    else
        echo -e "\n${red}ACCESO DENEGADO.${white}"
        exit 1
    fi
fi

# El resto del menú de pentesting continúa aquí...
